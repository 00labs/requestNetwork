{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module"
  },
  "plugins": ["typescript", "spellcheck"],
  "rules": {
    "spellcheck/spell-checker": [
      "error",
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "lang": "en_US",
        "skipWords": [
          "abi",
          "api",
          "arg",
          "args",
          "axios",
          "blockchain",
          "btc",
          "bitcoin",
          "chai",
          "checksum",
          "cors",
          "dichotomic",
          "ecdsa",
          "enum",
          "epk",
          "eslint",
          "eth",
          "ethereum",
          "filename",
          "http",
          "https",
          "infura",
          "ipfs",
          "javascript",
          "hashmap",
          "keccak",
          "kovan",
          "localhost",
          "lodash",
          "lte",
          "mainnet",
          "memberof",
          "metadata",
          "mul",
          "param",
          "params",
          "requestnetwork",
          "rinkeby",
          "semver",
          "stackoverflow",
          "timestamp",
          "timestamps",
          "testnet",
          "tslint",
          "tx",
          "txs",
          "tsconfig",
          "typedef",
          "typeof",
          "utils",
          "validator",
          "versioning",
          "webpack",
          "wei"
        ],
        "minLength": 3,
        "skipIfMatch": [
          "^(0x|0X)?[a-fA-F0-9]+$" // Hexadecimal strings
        ]
      }
    ]
  }
}
