{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true
  },
  "rules": {
    "indent": ["error", 2],
    "quotemark": [true, "single"],
    "curly": [2],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "max-line-length": [false],
    "arrow-parens": [0],
    "no-var-requires": [false]
  }
}
