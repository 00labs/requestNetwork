{
    "name": "@requestnetwork/request-network-monorepo",
    "version": "0.1.0",
    "private": true,
    "homepage": "https://github.com/RequestNetwork/requestNetwork",
    "engines": {
        "node": ">=8.0.0"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lerna": "lerna",
        "test": "lerna run test",
        "publish-coverage": "codecov --disable=gcov",
        "v2-build": "tsc -b packages/client-side packages/data-access packages/integration-test packages/ethereum-storage packages/request-logic packages/request-node packages/types packages/utils packages/types",
        "v2-lint": "lerna run --scope \"@requestnetwork/*\" --ignore \"@requestnetwork/request-network.js\" lint",
        "v2-test": "lerna run --scope \"@requestnetwork/*\" --ignore \"@requestnetwork/request-network.js\" test",
        "packageJsonLint": "npmPkgJsonLint ./packages"
    },
    "devDependencies": {
        "codecov": "3.1.0",
        "lerna": "3.4.3",
        "npm-package-json-lint": "3.4.1",
        "typescript": "3.1.3"
    }
}
